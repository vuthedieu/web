@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model int
@{
    ViewData["Title"] = "DanhMucSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>Thống kê</h2>

<form asp-action="ThongKe" asp-controller="homeadmin" method="get">
    <div class="form-group">
        <label>Tháng:</label>
        <input type="number" class="form-control" name="thang" min="1" max="12" required>
    </div>
    <div class="form-group">
        <label>Năm:</label>
        <input type="number" class="form-control" name="nam" min="1900" max="2100" required>
    </div>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
</form>

<h3>Tổng tiền hóa đơn bán:</h3>
<p>@Model</p>