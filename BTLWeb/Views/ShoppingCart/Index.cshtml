@using BTLWeb.Models.ViewModels
@model List<ShoppingCartViewModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/views/Shared/_ShoppingCartLayout.cshtml";
    var count = 0;
}

@foreach (var item in Model)
{
    count += 1;
    <tr>
        <td class="align-middle">@count</td>
        <td><img src="../img/ImageCamera/@item.Product.AnhDaiDien" alt="" style="width: 50px;"></td>
        <td class="align-middle">@item.Product.TenSp</td>
        <td class="align-middle price">@item.Product.GiaLonNhat</td>
        <td class="align-middle">
            <div class="input-group quantity mx-auto" style="width: 100px;">
                <div class="input-group-btn">
                    <button class="btn btn-sm btn-primary btn-minus">
                        <i class="fa fa-minus"></i>
                    </button>
                </div>
                <input type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value="1">
                <div class="input-group-btn">
                    <button class="btn btn-sm btn-primary btn-plus">
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
        </td>
        <td class="align-middle numPrice"></td>
        <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
    </tr>

}
